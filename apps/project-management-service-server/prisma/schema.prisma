datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  owner       String?
  tasks       Task[]
  updatedAt   DateTime @updatedAt
}

model Task {
  assignedTo  String?
  createdAt   DateTime  @default(now())
  description String?
  dueDate     DateTime?
  id          String    @id @default(cuid())
  name        String?
  project     Project?  @relation(fields: [projectId], references: [id])
  projectId   String?
  status      String?
  updatedAt   DateTime  @updatedAt
}
